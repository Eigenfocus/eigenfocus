<li class="snap-center cpy-card" id="<%= dom_id(issue) %>">
  <%= link_to edit_grouping_issue_path(grouping, issue), class: "group flex flex-col gap-2 text-sm text-content-500 border-2 border-background-200 bg-background-50 hover:bg-background-100 hover:border-background-900 cursor-pointer shadow-sm rounded-xl card p-4", data: { turbo_frame: 'issue_form' } do %>

    <h2 class="font-normal grow">
      <%= issue.title.truncate(120) %>
    </h2>


    <div class="flex h-2 flex-row items-stretch justify-between text-readable-content-500">

      <div class="flex items-center">
        <% if issue.description.present? %>
          <i class="fa-solid text-xs fa-align-justify"></i>
        <% end %>
      </div>

      <div class="hidden flex group-hover:flex items-center">
        <i class="fa fa-pencil"></i>
      </div>
    </div>
  <% end %>
</li>
