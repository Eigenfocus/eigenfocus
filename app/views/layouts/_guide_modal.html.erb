<%= render_modal(wrapper_options: { id: 'guide-modal' } , container_options: { class: "#{params[:show_guide_modal] == 'true' ? '' : 'hidden'} animate__animated animate__zoomIn fixed inset-0 overflow-y-auto flex items-center justify-center" }) do %>
  <div class="border-b border-base-200 pb-2 mb-4">
    <div class="flex items-center space-x-2">
      <div class="flex h-7 w-7 items-center justify-center rounded-lg bg-primary-500/10 p-1 text-primary-500 ">
        <i class="fa-regular fa-star"></i>
      </div>
      <h4 class="text-lg font-medium text-base-content">
        <%= t(".title") %>
      </h4>
    </div>
  </div>
  <div class="text-base flex flex-col gap-4">
    <div class="text-base-content text-lg font-medium text-center mt-4">
      <%= t(".thanks") %><br/>
    </div>
    <article class="flex flex-col">
      <h3 class="font-medium text-primary-500 flex items-center space-x-2">
        <%= icon_for(:projects) %>
        <span><%= t(".features.project.title") %></span>
      </h3>
      <p class="text-sm text-base-content"><%= t(".features.project.description") %></p>
    </article>

    <article class="flex flex-col">
      <h3 class="font-medium text-primary-500 flex items-center space-x-2">
        <%= icon_for(:issues) %>
        <span><%= t(".features.all_issues.title") %></span>
      </h3>
      <p class="text-sm text-base-content"><%= t(".features.all_issues.description") %></p>
    </article>

    <article class="flex flex-col">
      <h3 class="font-medium text-primary-500 flex items-center space-x-2">
        <%= icon_for(:boards) %>
        <span><%= t(".features.boards.title") %></span>
      </h3>
      <p class="text-sm text-base-content"><%= t(".features.boards.description") %></p>
    </article>

    <article class="flex flex-col">
      <h3 class="font-medium text-primary-500 flex items-center space-x-2">
        <%= icon_for(:time_entries) %>
        <span><%= t(".features.time_tracking.title") %></span>
      </h3>
      <p class="text-sm text-base-content"><%= t(".features.time_tracking.description") %></p>
    </article>

    <article class="flex flex-col">
      <h3 class="font-medium text-primary-500 flex items-center space-x-2">
        <%= icon_for(:report) %>
        <span><%= t(".features.reports.title") %></span>
      </h3>
      <p class="text-sm text-base-content"><%= t(".features.reports.description") %></p>
    </article>

    <article class="flex flex-col">
      <h3 class="font-medium text-primary-500 flex items-center space-x-2">
        <%= icon_for(:theme) %>
        <span><%= t(".features.themes.title") %></span>
      </h3>
      <p class="text-sm text-base-content"><%= t(".features.themes.description") %></p>
    </article>

    <div class="flex flex-col justify-center items-center gap-4 mt-2">
      <a href="https://github.com/Eigenfocus/eigenfocus" target="_blank" class="link-primary"><i class="fa-brands fa-github mr-1"></i> <%= t(".like_us") %></a>
      <button class="text-sm" data-action="click->modal#close"><%= t(".close") %></button>
    </div>
  </div>
<% end %>