<% if @time_entry.destroyed? %>
  <%= turbo_stream.remove @time_entry %>
  <%= turbo_stream.replace "running_time_entries_button", RunningTimeEntriesButtonComponent.new(count: current_user.running_time_entries_count) %>
  <%= new_turbo_stream_alert_message(:notice, t_flash_message(@time_entry)) %>
  <%= turbo_stream_update_daily_time(@time_entry.reference_date, @total_logged_time)%>

<% else %>
  <%= new_turbo_stream_alert_message(:alert, t_flash_message(@time_entry)) %>
<% end %>