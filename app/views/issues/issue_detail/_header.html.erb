<div class="tour--issue-detail-actions sticky top-0 z-10 flex items-center justify-between px-4 py-2  border-b border-base-300/80 bg-base-200/60">
  <div class="flex gap-2 items-center">
    <%= global_issue_link(issue) %>
    <% if issue.persisted? && issue.project.default_visualization.groupings.present? %>
      <%= render partial: 'issues/issue_detail/grouping_picker', locals: { issue: issue } %>
    <% end %>
  </div>
  <% if issue.archived? %>
    <div role="alert" class="text-sm italic font-medium hidden md:block">
      <%= t('.issue_archived_at', date: l(issue.archived_at, format: :long)) %>
    </div>
  <% end %>
  <div class="flex items-center">
    <% if issue.persisted? %>
      <% if issue.archived? %>
          <%= link_to unarchive_issue_path(issue),
          class: "btn btn-sm btn-success btn-ghost tooltip tooltip-bottom",
          data: { turbo_method: :put, turbo_confirm: t("confirmations.unarchive"), tip: t("actions.unarchive") } do %>
          <i class="ti ti-archive-off"></i>
        <% end %>

        <%= link_to issue_path(issue), class: "btn btn-sm btn-error btn-ghost tooltip tooltip-bottom", data: { turbo_method: :delete, turbo_confirm: t("issue.confirm_destroy", resource_name: Issue.model_name.human.downcase), tip: t("actions.remove") } do %>
          <i class="ti ti-trash"></i>
        <% end %>
      <% else %>
        <%= link_to time_entries_path(new_entry: { project_id: issue.project_id, issue_id: issue.id }), class: "btn btn-sm btn-primary btn-ghost tour--issue-detail-time-tracking tooltip tooltip-bottom", data: { turbo_frame: "_top", tip: t("actions.start_time_tracking") } do %>
          <%= icon_for(:time_entries) %>
        <% end %>

        <div class="divider divider-vertical"></div>

        <%= link_to archive_issue_path(issue),
            class: "btn btn-sm btn-error btn-ghost tooltip tooltip-bottom",
            data: { turbo_method: :put, turbo_confirm: t("issue.confirm_archive"), tip: t("actions.archive") } do %>
          <i class="ti ti-archive"></i>
        <% end %>

      <% end %>
    <% end %>
    <form method="dialog">
      <button class="btn btn-circle btn-ghost cpy-close-modal">
        <i class="ti ti-x"></i>
      </button>
    </form>
  </div>
</div>