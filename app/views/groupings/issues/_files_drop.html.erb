<div class="mt-2">
  <h3 class="text-xl text-readable-content-500">
    <%= Issue.human_attribute_name(:files) %>
  </h3>
</div>

<div
  class="dropzone-wrapper"
  data-controller="dropzone"
  data-action="dropzone:complete->issue-form#fileUploadCompleted"
  >

  <%= form.file_field(
    :files,
    class: 'hidden',
    direct_upload: true,
    multiple: true,
    disabled: true,
    data: {
      "dropzone-target": 'input'
    }
  ) %>

  <div class="dz-message needsclick drop-container">
    <div class="message-container">
      <div>
        <a>Click to upload</a> or drag and drop your files here.
      </div>
    </div>
  </div>

  <div id="dz-previews-container" data-dropzone-target="previewsContainer" class="previews-container">
  </div>

  <div class="hidden">
    <div data-dropzone-target="previewTemplate">
      <div class="flex flex-col gap-2">
        <div class="dz-details file-details">
          <div class="flex gap-4 items-center grow">
            <div class="flex items-center w-[100px] justify-center text-primary-200 text-4xl">
              <img data-dz-thumbnail />
            </div>
            <div class="text-readable-content-500 text-base flex grow flex-col">
              <span class="text-xs text-italic" ><div class="dz-filename"><span data-dz-name></span></div></span>
              <span  class="text-sm"><div class="dz-size" data-dz-size></div></span>
              <div class="w-full bg-gray-200 rounded-full h-2.5 dark:bg-gray-700">
                <div class="bg-primary-600 h-2.5 rounded-full dz-upload" data-dz-uploadprogress style="width: 45%"></div>
              </div>
              <div class="dz-error-message text-error-500 text-sm"><span data-dz-errormessage></span></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="issue-<%= issue.id %>-file-list" class="flex flex-col gap-4">
  <% issue.files.each do |file| %>
    <%= render partial: 'issues/files/file', locals: { issue:, file: } %>
  <% end %>
</div>